root = true

[*]
charset = utf-8
indent_size = 4
tab_width = 4
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
ij_continuation_indent_size = 4
ij_formatter_tags_enabled = true # 格式化器开关标签
# IDEA 相关设置
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_any_keep_first_column_comment = false
ij_any_keep_line_breaks = true
ij_any_wrap_long_lines = false
ij_any_line_comment_add_space = true
ij_any_block_comment_add_space = true
ij_any_line_comment_at_first_column = false
ij_any_block_comment_at_first_column = false
ij_any_line_comment_add_space_on_reformat = true
ij_any_keep_indents_on_empty_lines = true
max_line_length = 100

[.editorconfig]
ij_editorconfig_space_after_colon = false
ij_editorconfig_space_after_comma = true
ij_editorconfig_space_before_colon = false
ij_editorconfig_space_before_comma = false
ij_editorconfig_align_group_field_declarations = false
ij_editorconfig_spaces_around_assignment_operators = true

[*.java]
ij_java_continuation_indent_size = 4
ij_java_enum_constants_wrap = split_into_lines
ij_java_space_inside_one_line_enum_braces = true
ij_java_doc_do_not_wrap_if_one_line = true
ij_java_class_count_to_use_import_on_demand = 999
ij_java_names_count_to_use_import_on_demand = 999
ij_java_doc_enable_formatting = true
ij_java_doc_add_p_tag_on_empty_lines = false
ij_java_doc_align_param_comments = true
ij_java_blank_lines_before_method_body = 1
# ij_java_method_call_chain_wrap = split_into_lines
# ij_java_wrap_first_method_in_call_chain = false
# ij_java_align_multiline_chained_methods = true
ij_java_builder_methods = unset
ij_java_keep_builder_methods_indents = false


