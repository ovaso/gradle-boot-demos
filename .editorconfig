[*.kt]
ij_kotlin_space_after_extend_colon = true
ij_kotlin_space_after_type_colon = true
ij_kotlin_space_after_comma = true
ij_kotlin_block_comment_add_space = true
ij_kotlin_line_comment_add_space = true
ij_kotlin_indent_size = 4
ij_kotlin_tab_width = 4
ij_kotlin_keep_indents_on_empty_lines = true
ij_kotlin_align_multiline_parameters = true
ij_kotlin_line_break_after_multiline_when_entry = false
ij_kotlin_keep_line_breaks = false
ij_continuation_indent_size = 2
# Don't use star imports.
ij_kotlin_name_count_to_use_star_import = 999
ij_kotlin_name_count_to_use_star_import_for_members = 999

[*.xml]
ij_xml_text_wrap = off
ij_xml_attribute_wrap = off

[*.html]
ij_html_do_not_indent_children_of_tags = none
ij_html_indent_size = 4
ij_html_continuation_indent_size = 4
ij_html_keep_indents_on_empty_lines = true

[*.json]
indent_size = 2
tab_width = 2
ij_continuation_indent_size = 2

[{*.gant,*.groovy,*.gradle,*.gdsl,*.gy,Jenkinsfile}]
indent_size = 2
tab_width = 2
ij_continuation_indent_size = 2

[**/partial/*.mustache]
insert_final_newline = false

[{*.md,*.adoc}]
indent_size = 2
tab_width = 2
ij_continuation_indent_size = 2
trim_trailing_whitespace = false

[{*.yml,*.yaml}]
indent_size = 2
tab_width = 2
ij_yaml_keep_indents_on_empty_lines = true
ij_continuation_indent_size = 2

[*.gradle]
indent_size = tab
tab_width = 4